&НаКлиенте
Процедура ДР_РасчитатьСкидкуВместоНаСервере()  
	//Новоятлова ++
	Для Каждого Строка Из Объект.Товары Цикл
		 РассчитатьСуммуСтроки(Строка);
		 
	 КонецЦикла;
	 Для Каждого Строка Из Объект.Услуги Цикл
		 РассчитатьСуммуСтроки(Строка);
		 
	КонецЦикла;

	//Новоятлова --	
КонецПроцедуры

&НаКлиенте
Процедура ДР_РасчитатьСкидкуВместо(Команда) 
	//Новоятлова++
	ДР_РасчитатьСкидкуВместоНаСервере();  
	//Новоятлова--
КонецПроцедуры

&НаКлиенте
Асинх Процедура ДР_ДР_СкидкаПриИзмененииВместо(Элемент) 
	//Новоятлова++
	
	Если Объект.Товары.Количество() <> 0 Или Объект.Услуги.Количество() <> 0 Тогда
		
		Ответ = Ждать ВопросАсинх("Пересчитать скидку в документе?", РежимДиалогаВопрос.ДаНет);
		Если Ответ = КодВозвратаДиалога.Да Тогда
			ДР_РасчитатьСкидкуВместоНаСервере()	
			
		КонецЕсли;
		Если Ответ = КодВозвратаДиалога.Нет Тогда
			Возврат;
		КонецЕсли;
	КонецЕсли;
	//Новоятлова--
КонецПроцедуры


