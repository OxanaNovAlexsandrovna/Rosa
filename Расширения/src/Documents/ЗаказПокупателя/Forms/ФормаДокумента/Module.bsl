	//ЭлементРасчитатьСкидку.ПутьКДанным = "Объект.ДР_РасчитатьСкидку";
	ЭлементРасчитатьСкидку.Заголовок = "Расчитать скидку";
	ЭлементРасчитатьСкидку.ИмяКоманды = "ДР_РасчитатьСкидку";
	//Новоятлова --	
